<div class="jumbotron py-4 my-4">
  <h1 class="display-4">Hello, {{firstName}}!</h1>
  <p class="lead">Start organizing an event by clicking the button below.</p>
  <a class="btn btn-primary btn-lg" href="/create" role="button">Create Event</a>
</div>

<h1>Events you're managing:</h1>
<br>
<p class="pl-2">
  <a class="h3" href="#">CS 443 Recitations</a>
</p>
<p class="pl-2">
  <a class="h3" href="#">Department Colloquium</a>
</p>
<br>
<a class="btn btn-primary btn-lg" href="#" role="button">View past events</a>
<br>
<br>

<h1>Events you're attending:</h1>
<br>
{{#each events}}
<div class="reservation-display mb-4 ml-2 w-auto">
	<h3>{{this.title}}</h3>
	<p>Created by: {{this.creator}}</p>
	<p>Description: {{this.description}}</p>

	<h5>Your Reservation(s):</h5>
	
  <h6>{{#each this.reservations}}</h6>
    <div class="row" style="padding-left: 3rem">
      <div class="col-12 col-sm-5 col-md-4 col-lg-3">
        <p class="mb-0"><b>{{this.date}}</b></p>
        <p class="mb-0">{{this.time}}</p>
        <p class="mb-0">{{this.location}}</p>
      </div>
      <div class="col-12 col-sm-7 col-md-8 col-lg-9">
        <a class="btn btn-primary btn-sm mb-3 py-2" style="text-indent: 0" href="">Edit reservation</a>
      </div>
    </div>
    
    <h6 class="mt-3" style="padding-left: 3rem">Who else signed up:</h6>
    
    {{#each this.attendees}}
    <div class="row" style="padding-left: 3rem">
      <div class="col-12 col-sm-5 col-md-4 col-lg-3">
        <p class="mb-0">{{this.firstName}} {{this.lastName}}</p>
      </div>
      <div class="col-12 col-sm-7 col-md-8 col-lg-9">
        <p class="mb-0">{{this.email}}</p>
      </div>
    </div>
    {{/each}}
    
    <br>
	{{/each}}

</div>
{{/each}}
<a class="btn btn-primary btn-lg mt-2 mb-5" href="#" role="button">View past reservations</a>