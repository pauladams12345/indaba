<h1 class="mt-5">Your past reservations:</h1>
<br>
{{#each eventsAttending}}
<div class="reservation-display mb-4 ml-2 w-auto">
	<h3>{{this.title}}</h3>
	<p>Created by: {{this.creator}}</p>
	<p>Description: {{this.description}}</p>

	<h5>Your Reservation(s):</h5>
	
  <h6>{{#each this.reservations}}</h6>
    <div class="row" style="padding-left: 3rem">
      <div class="col-12 col-sm-5 col-md-4 col-lg-3">
        <p class="mb-0"><b>{{this.date}}</b></p>
        <p class="mb-0">{{this.time}}</p>
        <p class="mb-0">{{this.location}}</p>
      </div>
      <div class="col-12 col-sm-7 col-md-8 col-lg-9">
        <a class="btn btn-primary btn-sm mb-3 py-2" style="text-indent: 0" href="">Edit reservation</a>
      </div>
    </div>
    
    <h6 class="mt-3" style="padding-left: 3rem">Who else signed up:</h6>
    
    {{#each this.attendees}}
    <div class="row" style="padding-left: 3rem">
      <div class="col-12 col-sm-5 col-md-4 col-lg-3">
        <p class="mb-0">{{this.firstName}} {{this.lastName}}</p>
      </div>
      <div class="col-12 col-sm-7 col-md-8 col-lg-9">
        <p class="mb-0">{{this.email}}</p>
      </div>
    </div>
    {{/each}}
    
    <br>
	{{/each}}

</div>
{{/each}}
