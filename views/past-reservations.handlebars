
<h1 class="mt-5">Your past reservations:</h1>
<br>
{{#each eventsAttending}}
<div class="reservation-display mb-4 ml-2 w-auto">
  <h3>{{this.title}}</h3>
  <p>Created by: {{this.creator}}</p>
  <p>Description: {{this.description}}</p>

  <h5>Your Reservation(s):</h5>

  <h6>{{#each this.reservations}}</h6>
    <div class="row" style="padding-left: 3rem">
      <div class="col-12 col-sm-5 col-md-4 col-lg-3">
        <p class="mb-0 date"><b>{{this.slot_date}}</b></p>
        <p class="mb-0"><span class="time">{{this.start_time}}</span> - <span class="time">{{this.end_time}}</span></p>
        <p class="mb-0">{{this.location}}</p>
      </div>
      <div class="col-12 col-sm-7 col-md-8 col-lg-9">
        <a class="btn btn-primary btn-sm mb-3 py-2" style="text-indent: 0" href="/make-reservations/{{this.event_id}}">Edit reservation</a>
      </div>
    </div>

    <h6 class="mt-3 pl-5">Who's signed up:</h6>
    <div class="row pl-5">
      <div class="table-responsive-md" id="resv">
        <table class="table table-sm table-striped table-light">
        <thead>
          <tr>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Email</th>
          </tr>
        </thead>
        <tbody>
          {{#each this.attendees}}
          <tr>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.ONID_email}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      </div>
    </div>
    <br>
  {{/each}}
</div>
{{/each}}
